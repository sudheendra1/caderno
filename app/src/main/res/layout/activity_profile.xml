<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/refreshpullprofile">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile"
    android:background="@color/white">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#372B8F">
            <include layout="@layout/toolbar"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.184"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.183"
                app:srcCompat="@drawable/ic_baseline_person_outline_24_white" />

            <TextView
                android:id="@+id/tvwelcome"
                android:layout_width="290dp"
                android:layout_height="171dp"
                android:hint="Loading...."
                android:textColorHint="@color/white"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageView"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="21sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.371"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.37" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:backgroundTint="#5E1C1C1C"
                android:drawableLeft="@drawable/ic_baseline_person_outline_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Loading...."
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.051" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:id="@+id/view1"
                android:layout_below="@id/profile_username"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:backgroundTint="#5E1C1C1C"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Loading..."
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.051" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view2"
                android:layout_marginTop="20dp"
                android:layout_below="@id/profile_email"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/profile_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:backgroundTint="#5E1C1C1C"
                android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Loading...."
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.051" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:id="@+id/view3"
                android:layout_below="@id/profile_dob"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/profile_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:backgroundTint="#5E1C1C1C"

                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Loading...."
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.051"
                android:layout_below="@id/view3"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:id="@+id/view4"
                android:layout_below="@id/profile_year"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/profile_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view4"
                android:layout_marginTop="21dp"

                android:background="@drawable/border"
                android:backgroundTint="#5E1C1C1C"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Loading...."
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.051" />

            <ProgressBar
                android:id="@+id/profilepb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:elevation="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />




        </RelativeLayout>




    </LinearLayout>









    



</ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>